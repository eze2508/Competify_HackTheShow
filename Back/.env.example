# Spotify app
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
# Para desarrollo web: http://localhost:4000/auth/callback
# Para producción: https://competify-hacktheshow.onrender.com/auth/callback
SPOTIFY_REDIRECT_URI=https://competify-hacktheshow.onrender.com/auth/callback

# Frontend redirect after login
# Para desarrollo local: exp://localhost:8081
# Para desarrollo móvil: competify://callback
# Para producción web: https://tu-frontend.com
FRONTEND_URL=competify://callback

# Supabase (project URL + service role key)
SUPABASE_URL=https://xyz.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# JWT secret for session token generation
APP_JWT_SECRET=some_long_secret

# Optional: port
PORT=4000
